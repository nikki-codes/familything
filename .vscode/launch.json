{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug Java Version",
            "request": "launch",
            "mainClass": "Main",
            "projectName": "familything",
            "classPaths": ["${workspaceFolder}/java-version/build"],
            "preLaunchTask": "Java: Compile Only",
            "cwd": "${workspaceFolder}/java-version"
        },
        {
            "type": "java",
            "name": "Debug Java (Legacy)",
            "request": "launch",
            "mainClass": "Main",
            "projectName": "familything",
            "classPaths": ["${workspaceFolder}/build"],
            "preLaunchTask": "Legacy: Build and Run (Original)"
        },
        {
            "type": "python",
            "name": "Debug Python Version",
            "request": "launch",
            "program": "${workspaceFolder}/python-version/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python-version",
            "justMyCode": true
        },
        {
            "type": "python",
            "name": "Debug Python with Setup",
            "request": "launch",
            "program": "${workspaceFolder}/python-version/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/python-version",
            "justMyCode": true
        },
        {
            "type": "node",
            "name": "Debug TypeScript Version",
            "request": "launch",
            "program": "${workspaceFolder}/typescript-version/src/main.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/typescript-version",
            "preLaunchTask": "TypeScript: Compile Only",
            "outFiles": ["${workspaceFolder}/typescript-version/dist/**/*.js"],
            "sourceMaps": true
        },
        {
            "type": "node",
            "name": "Debug TypeScript Compiled",
            "request": "launch",
            "program": "${workspaceFolder}/typescript-version/dist/main.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/typescript-version",
            "preLaunchTask": "TypeScript: Compile Only",
            "outFiles": ["${workspaceFolder}/typescript-version/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}
